          },
          "sets": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        }
      }
    },
    "selection": {
      "type": "object",
      "required": ["type", "index"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["set", "composite", "intersection", "union"]
        },
        "index": {
          "type": "integer"
        }
      }
    },
    "queries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "color"],
        "properties": {
          "name": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "set": {
            "type": "object",
            "required": ["type", "index"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["set", "composite", "intersection", "union"]
              },
              "index": {
                "type": "integer"
              }
            }
          },
          "overlaps": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        }
      }
    },
    "overlaps": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      }
    },

    "props": {
