        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "cardinality": {
            "type": "integer"
          }
        }
      }
    },
    "combinations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "cardinality": {
            "type": "integer"
          },
          "type": {
            "type": "string",
